{% extends '@Openl10nWeb/layout/main.html.twig' %}

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form class="panel panel-default" action="{{ path('openl10n_domain_import', {'slug': project.slug}) }}" method="POST" {{ form_enctype(form) }} novalidate>
          <div class="panel-heading">
            <h3 class="panel-title">
              Import translations in {{ project.name }}
            </h3>
          </div>

          <div class="panel-body">
            {{ form_row(form.file, {'attr': {
              'class': 'js-file-slugify',
              'data-slug': form.slug.vars.id,
              'data-locale': form.locale.vars.id
            }}) }}

            {{ form_row(form.slug) }}
            {{ form_row(form.locale) }}

            {{ form_rest(form) }}
          </div>

          <div class="panel-footer">
            <button type="submit" class="btn btn-primary">
              Import
            </button>
            <a href="{{ path('openl10n_project_show', {'slug': project.slug}) }}" class="btn btn-link">
              Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
